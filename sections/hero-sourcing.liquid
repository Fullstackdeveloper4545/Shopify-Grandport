<section class="hero-sourcing">
  <div class="hero-overlay">
    <div class="hero-content">
      <h1>
        Bring Your Product Idea to Market —
        <br>
        or Bulk Import What You Need
      </h1>

      <p>
        Grandport International helps you source trusted manufacturers,
        negotiate pricing, and manage quality from concept to delivery.
      </p>

      <div class="hero-buttons">
        <a href="#" class="btn primary">Request a Quote</a>
        <a href="#" class="btn secondary">Talk to a Sourcing Specialist</a>
      </div>

      <div class="hero-meta">
        B2B Only · UAE-Based · Global Supplier Network
      </div>
    </div>
  </div>
</section>

<style>
.hero-sourcing {
  position: relative;
  min-height: 75vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;

  background-image: url("{{ 'banner.jpg' | asset_url }}");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  isolation: isolate;
}

/* GLOBAL DARK OVERLAY */
.hero-sourcing::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.25);
  z-index: 1;
}

/* CENTERED OVERLAY */
.hero-overlay {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;

  display: flex;
  align-items: center;
  justify-content: center;

  padding: 90px 6vw;

  background: linear-gradient(
    to right,
    rgba(0, 0, 0, 0.75) 0%,
    rgba(0, 0, 0, 0.55) 35%,
    rgba(0, 0, 0, 0.35) 55%,
    rgba(0, 0, 0, 0.15) 70%,
    rgba(0, 0, 0, 0.05) 85%,
    rgba(0, 0, 0, 0) 100%
  );
}

/* CONTENT */
.hero-content {
  max-width: 780px;
  text-align: center;
}

/* HEADLINE */
.hero-content h1 {
  font-size: 48px;
  font-weight: 700;
  line-height: 1.25;
  margin-bottom: 20px;
}

/* SUBTEXT */
.hero-content p {
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 34px;
  opacity: 0.95;
}

/* BUTTONS */
.hero-buttons {
  display: flex;
  justify-content: center;
  gap: 18px;
  margin-bottom: 24px;
}

.btn {
  padding: 14px 30px;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
  display: inline-block;
}

.btn.primary {
  background: #f36b21;
  color: #ffffff;
}

.btn.secondary {
  background: rgba(255, 255, 255, 0.95);
  color: #111111;
}

/* META */
.hero-meta {
  font-size: 14px;
  opacity: 0.85;
}

/* LARGE SCREENS */
@media (min-width: 1600px) {
  .hero-content h1 {
    font-size: 52px;
  }
}

/* TABLET */
@media (max-width: 1024px) {
  .hero-overlay {
    padding: 80px 5vw;
    background: rgba(0,0,0,0.6);
  }
}

/* MOBILE */
@media (max-width: 768px) {
  .hero-overlay {
    padding: 70px 22px;
    background: rgba(0,0,0,0.7);
  }

  .hero-content h1 {
    font-size: 32px;
  }

  .hero-buttons {
    flex-direction: column;
    align-items: center;
  }
}
</style>

