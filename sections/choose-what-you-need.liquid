<section class="choose-need">
  <h2>Choose what you need</h2>

  <div class="choose-grid">

    <!-- Card 1 -->
    <div class="choose-card">
      <div class="card-image">
       
        <img
          src="{{ 'tile1.png' | asset_url }}"
          alt="Source Your Innovation"
          width="900"
          height="500"
          loading="lazy"
        />
      </div>

      <div class="card-body">
        
        <ul>
          <li>✔ Factory Sourcing &amp; Prototyping</li>
          <li>✔ Costing &amp; Negotiation</li>
          <li>✔ Branding &amp; Packaging</li>
        </ul>

        <a href="#" class="btn primary">Start Innovation Sourcing</a>
      </div>
    </div>

    <!-- Card 2 -->
    <div class="choose-card">
      <div class="card-image">
        
        <img
          src="{{ 'tile2.png' | asset_url }}"
          alt="Bulk Import on Demand"
          width="900"
          height="500"
          loading="lazy"
        />
      </div>

      <div class="card-body">
      
        <ul>
          <li>✔ Supplier Quotes &amp; Comparisons</li>
          <li>✔ Quality Checks &amp; Inspections</li>
          <li>✔ Shipping &amp; Logistics</li>
        </ul>

        <a href="#" class="btn primary">Request Bulk Import Quote</a>
      </div>
    </div>

  </div>
</section>

<style>
.choose-need {
  padding: 90px 40px;
  background: #f6f8fb;
  text-align: center;
}

.choose-need h2 {
  font-size: 36px;
  margin-bottom: 55px;
  font-weight: 700;
}

.choose-grid {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
  gap: 35px;
}

/* CARD */
.choose-card {
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 12px 28px rgba(0,0,0,0.12);
  overflow: hidden; /* IMPORTANT: image touches edges */
  text-align: left;
}

/* IMAGE */
.card-image {
  position: relative;
}

.card-image img {
  width: 100%;
  height: auto;
  display: block;
}

/* ICON */
.card-image .icon {
  width: 44px;
  height: 44px;
  background: #f36b21;
  border-radius: 6px;
  position: absolute;
  top: 16px;
  left: 16px;
}

.card-image .icon::after {
  content: '';
  width: 18px;
  height: 18px;
  background: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 3px;
}

/* CONTENT */
.card-body {
  padding: 30px;
}

.choose-card h3 {
  font-size: 24px;
  margin-bottom: 12px;
}

.choose-card p {
  margin-bottom: 18px;
  font-size: 16px;
}

.choose-card ul {
  list-style: none;
  padding: 0;
  margin-bottom: 28px;
}

.choose-card ul li {
  margin-bottom: 10px;
  font-size: 15px;
}

/* BUTTON */
.btn.primary {
  background: #f36b21;
  color: #ffffff;
  padding: 14px 26px;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 600;
  display: inline-block;
}
</style>

