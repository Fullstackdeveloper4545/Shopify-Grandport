  width: 200px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.08);
}

.step-number {
  width: 42px;
  height: 42px;
  background: #f36b21;
  color: #ffffff;
  font-weight: 700;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15px;
}

.step p {
  font-size: 15px;
  font-weight: 500;
}
