<section class="quotation-section">
  <h2>Get a quotation in 24–48 hours</h2>
  <p class="subtitle">Fast, reliable, and tailored to your needs.</p>

  {% form 'contact', class: 'quotation-form' %}
    <div class="form-row">
      <input type="text" name="contact[name]" placeholder="Name" required>
      <input type="text" name="contact[company]" placeholder="Company">
    </div>

    <div class="form-row">
      <input type="email" name="contact[email]" placeholder="Email" required>
      <input type="tel" name="contact[phone]" placeholder="Phone Number">
    </div>

    <div class="form-row radio-row">
      <label>I need help with:</label>
      <label class="radio">
        <input type="radio" name="contact[help_type]" value="Source My Innovation" checked>
        <span>Source My Innovation</span>
      </label>
      <label class="radio">
        <input type="radio" name="contact[help_type]" value="Bulk Import a Product">
        <span>Bulk Import a Product</span>
      </label>
    </div>

    <div class="form-row">
      <input type="text" name="contact[product_details]" placeholder="Product Name / Category">
    </div>

    <div class="form-row">
      <input type="text" name="contact[order_quantity]" placeholder="Order Quantity">
      <input type="text" name="contact[destination]" placeholder="Destination">
    </div>

    <div class="form-row submit-row">
      <button type="submit">Send Request →</button>
    </div>

    {% if form.posted_successfully? %}
      <p class="success">Thank you! Your request has been sent.</p>
    {% endif %}
  {% endform %}
</section>

<style>
.quotation-section {
  padding: 90px 40px;
  background: #f6f8fb;
  text-align: center;
}

.quotation-section h2 {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 10px;
}

.subtitle {
  margin-bottom: 40px;
  color: #555;
}

.quotation-form {
  max-width: 900px;
  margin: auto;
  background: #ffffff;
  padding: 35px;
  border-radius: 10px;
  box-shadow: 0 15px 40px rgba(0,0,0,0.12);
  text-align: left;
}

.form-row {
  display: flex;
  gap: 20px;
  margin-bottom: 18px;
  flex-wrap: wrap;
}

.form-row input {
  flex: 1;
  padding: 14px 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 15px;
}

.radio-row {
  align-items: center;
}

.radio {
  display: flex;
  align-items: center;
  gap: 8px;
  background: #f1f1f1;
  padding: 10px 16px;
  border-radius: 4px;
  cursor: pointer;
}

.radio input {
  accent-color: #f36b21;
}

.submit-row {
  justify-content: center;
}

.submit-row button {
  background: #f36b21;
  color: #fff;
  border: none;
  padding: 15px 40px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 4px;
  cursor: pointer;
}

.submit-row button:hover {
  opacity: 0.9;
}

.success {
  margin-top: 15px;
  color: green;
  font-weight: 600;
}
</style>

